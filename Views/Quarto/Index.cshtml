@model IEnumerable<PmwebProjeto.Models.Quarto>

@{
    ViewData["Title"] = "Index";
}

<h1>Quartos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Cadastrar</a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                Nro. de ocupantes
            </th>
            <th>
                Nro. de adultos
            </th>
            <th>
                Nro. de crianças
            </th>
            <th>
                Preco
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hotel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroOcupantes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroAdultos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroCriancas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hotel.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
